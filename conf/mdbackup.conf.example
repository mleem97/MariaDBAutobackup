# MariaDB Autobackup Configuration Example
# This is an example configuration file for MariaDBAutobackup
# Copy this file to mdbackup.conf and adjust the settings to your needs

# Database Settings
DATABASE_HOST="localhost"
DATABASE_USER="root"
DATABASE_PASSWORD=""

# Backup Settings
BACKUP_DIR="/var/lib/mysql-backups"
LOG_FILE="/var/log/mdbackup.log"
BACKUP_RETENTION_DAYS="7"

# Compression Settings
COMPRESSION_ALGORITHM="gzip"
COMPRESSION_LEVEL="6"

# Encryption Settings
ENCRYPT_BACKUPS="no"
GPG_KEY_ID=""

# Schedule Settings
BACKUP_TIME="02:00"

# Remote Backup Settings
REMOTE_BACKUP_ENABLED="no"
REMOTE_NFS_MOUNT=""
REMOTE_RSYNC_TARGET=""
REMOTE_CLOUD_CLI=""
REMOTE_CLOUD_BUCKET=""

# SSH Settings (for remote database connections)
SSH_USER=""
SSH_HOST=""
SSH_PORT="22"